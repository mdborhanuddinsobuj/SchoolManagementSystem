@model IEnumerable<SMS.Core.Models.AdmissionFeeModel>

@{
    ViewData["Title"] = "Index";
    int i = 1;
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-striped table-sm">
    <thead class="bg-success">
        <tr>
            <th>
                Sl
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Admission.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Admission.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Admission.Joining)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FeeDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountInTaka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentDetails)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @i
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Admission.StudentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Admission.StudentName)
                </td>
                <td>
                    @item.Admission.Joining.ToString("dd MMMM, yyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassInfo.ClassName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Section.SectionName)
                </td>
                <td>
                    @item.FeeDate.ToString("dd MMMM, yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AmountInTaka)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Payment)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentDetails)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        i++;
}
    </tbody>
</table>

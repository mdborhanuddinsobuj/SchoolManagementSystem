@model SMS.Core.Models.ResultModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ResultModel</h4>
<hr />

        <form asp-action="Create">
            <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-6 form-group">
                <label asp-for="AdmissionId" class="control-label"></label>
                <select asp-for="AdmissionId" class ="form-control" asp-items="ViewBag.Admission">
                    <option>----Select StudentId----</option>
                </select>
            </div>
        <div class="col-6 form-group">
                <label asp-for="ClassInfoId" class="control-label"></label>
                <select asp-for="ClassInfoId" class ="form-control" asp-items="ViewBag.ClassInfo">
                    <option>----Select ClassName----</option>
                </select>
            </div>
        <div class="col-6 form-group">
                <label asp-for="SectionId" class="control-label"></label>
                <select asp-for="SectionId" class ="form-control" asp-items="ViewBag.Section">
                    <option>----Select Section----</option>
                </select>
            </div>
        <div class="col-6 form-group">
                <label asp-for="Result" class="control-label"></label>
                <input asp-for="Result" class="form-control" />
                <span asp-validation-for="Result" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
    </div>
